<html>
<head>
    <title>PDX Adventures</title>
    <link rel ='stylesheet' href ='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css'>
    <link rel ='stylesheet' href ='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link rel ='stylesheet' href ='../css/style.css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js'></script>
</head>
<body>
    <nav class='navbar navbar-inverse navbar-fixed-top'>
        <div class='container-fluid'>
            <div class='navbar-header'>
                <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='#myNavbar'>
                    <span class='icon-bar'></span>
                    <span class='icon-bar'></span>
                    <span class='icon-bar'></span>
                </button>
                <a class='navbar-brand' href='/'>PDX Adventures</a>
            </div>
            <div class="collapse navbar-collapse" id='myNavbar'>
                <ul class='nav navbar-nav navbar-right'>
                    <li><a href='/add_event'>Add Event</a></li>
                    <li><a href='/activities'>See all Activities</a></li>
                    <li><a href='https://github.com/BabaYaga64/PDXAdventures.git'><i class="fa fa-github"></i></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <section>
        <div class='container text-center'>
        <br>
        <br>
        <br>
        <div class='row'>
            <div class='col-md-4 col-md-offset-4'>
            <h1> {{ event.getEventName }} </h1>
            <dl class='dl-horizontal text-justify'>
                <dt>Name</dt>
                    <dd>{{ event.getEventName }}</dd>
                <dt>Date</dt>
                    <dd>{{ event.getDateEvent }}</dd>
                <dt>Location</dt>
                    <dd>{{ event.getLocation }}</dd>
                <dt>Description</dt>
                    <dd>{{ event.getDescription }}</dd>
                <dt>Contact name</dt>
                    <dd>{{ user.getName }}</dd>
                <dt>Contact email</dt>
                    <dd>{{ user.getEmail }}</dd>
                <dt>Contact Phone</dt>
                    <dd>{{ user.getPhone }}</dd>
                <dt> Under the category:</dt>
                {% if associated_activities is not empty %}
                    {% for activity in associated_activities %}
                        <dd>{{ activity.getActivityName }}</dd>
                    {% endfor %}
                {% endif %}
            </dl>
            <button type='submit'><a class='text-center' href='/'>Finish</a></button>
            <button type='submit'><a class='text-center' href='/event/{{ event.getId }}/edit'>Edit this event</a></button>
            </div>
        </div>
    </div>
</body>
</html>
