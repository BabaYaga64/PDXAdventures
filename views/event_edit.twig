<html>
<head>
    <title>Edit this event</title>
</head>
<body>
    <h1> {{ event.getEventName }} </h1>
    <h2>Please re-enter your information</h2>
    <form action='/event/{{ event.getId }}' method='post'>
          <input name="_method" type="hidden" value="patch">
            <label for='event_name'>Event Name</label>
            <input id='event_name' name='event_name' type='text' required>
            <label for='date_event'>Date</label>
            <input id='date_event' name='date_event' type='text' required>
            <label for='location'>Location</label>
            <input id='location' name='location' type='text' required>
            <label for='description'>Description</label>
            <input id='description' name='description' type='text' required>

            <label for='name'>Your name</label>
            <input id='name' name='name' type='text' required>
            <label for='email'>Your email</label>
            <input id='email' name='email' type='text' required>
            <label for='phone'>Your phone</label>
            <input id='phone' name='phone' type='text' required>

            <!-- <label for='activity'>Please choose an activity category</label>
            {% if activities is not empty %}
            <select id='activity_name' name='activity_name' type='text'>
                {% for activity in activities %}
                    <option value="{{ activity.getId }}"> {{ activity.getName }} </option>
                {% endfor %}
            </select>
            {% endif %} -->
        <button type='submit'>Edit</button>
    </form>

    <form action='/delete_event/{{ event.getId }}' method='post'>
          <input name="_method" type="hidden" value="delete">
          <button type='submit'>Delete this event</button>
    </form>
</body>
</html>
