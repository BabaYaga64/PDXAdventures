<html>
<head>
    <title>PDX Adventures</title>
    <link rel ='stylesheet' href ='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css'>
    <link rel ='stylesheet' href ='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link rel ='stylesheet' href ='../css/style.css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js'></script>
  </head>
  <body>
      <nav class='navbar navbar-inverse navbar-fixed-top'>
        <div class='container-fluid'>
          <div class='navbar-header'>
            <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='#myNavbar'>
                <span class='icon-bar'></span>
                <span class='icon-bar'></span>
                <span class='icon-bar'></span>
            </button>
            <a class='navbar-brand' href='/'>PDX Adventures</a>
          </div>
          <div class="collapse navbar-collapse" id='myNavbar'>
              <ul class='nav navbar-nav navbar-right'>
              <li><a href='/add_event'>Add Event</a></li>
              <li><a href='/activities'>See all Activities</a></li>
              <li><a href='https://github.com/BabaYaga64/PDXAdventures.git'><i class="fa fa-github"></i></a></li>
              <!-- <li><form action='/' method='post'> -->
              </form>
            </ul>
          </div>
        </div>
      </nav>
      <section>
      <div class='container text-center'>
      <br>
      <br>
      <br>
    <h1> {{ event.getEventName }} </h1>
    <h2>Please re-enter your information</h2>
    <div class='row'>
        <div class='col-md-4'></div>
        <div class='col-md-4'>
        <form class='form-horizontal' role='form' action='/event/{{ event.getId }}' method='post' role='form'>
            <input name="_method" type="hidden" value="patch">
            <div class='form-group'>
                <label for='event_name'>Event Name</label>
                <input id='event_name' name='event_name' type='text' required>
            </div>
            <div class='form-group'>
                <label for='date_event'>Date</label>
                <input id='date_event' name='date_event' type='text' required>
            </div>
            <div class='form-group'>
                <label for='location'>Location</label>
                <input id='location' name='location' type='text' required>
            </div>
            <div class='form-group'>
                <label for='description'>Description</label>
                <input id='description' name='description' type='text' required>
            </div>

            <div class='form-group'>
                <label for='name'>Your name</label>
                <input id='name' name='name' type='text' required>
            </div>
            <div class='form-group'>
                <label for='email'>Your email</label>
                <input id='email' name='email' type='text' required>
            </div>
            <div class='form-group'>
                <label for='phone'>Your phone</label>
                <input id='phone' name='phone' type='text' required>
            </div>

            <div class='form-group'>
                <label for='activities'>Please check the activity categories that this event falls under</label>
                <input type="checkbox" name="activity[]" value="1" /> Outdoors<br/>
                <input type="checkbox" name="activity[]" value="2" /> Soccer<br/>
                <input type="checkbox" name="activity[]" value="3" /> Biking<br/>
                <input type="checkbox" name="activity[]" value="4" /> Swimming<br/>
                <input type="checkbox" name="activity[]" value="5" /> Dog-friendly<br/>
            </div>
        <button type='submit'>Edit</button>
    </form>

    <form action='/delete_event/{{ event.getId }}' method='post'>
          <input name="_method" type="hidden" value="delete">
          <button type='submit'>Delete this event</button>
    </form>
</div>
<div class='col-md-4'></div>
</div>

</body>
</html>
